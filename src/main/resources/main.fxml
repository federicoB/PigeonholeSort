<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1000.0"
  rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE"
  xmlns="http://javafx.com/javafx/8.0.131" fx:controller="visualization.MainController">
  <Tab>
    <graphic>
      <Label rotate="90" text="Visualization"/>
    </graphic>
    <BorderPane prefHeight="200.0" prefWidth="200.0">
      <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
               <Button onAction="#onFileInputButtonClick" text="Input from file" />
               <Button onAction="#onUserInputButtonClick" text="Input from user" />
               <Button onAction="#onGenerateArrayButtonClick" text="Random generation" />
          <Button onAction="#OnSortArrayButtonClick" text="Sort" />
          <VBox spacing="10.0">
            <Label text="Animation speed"/>
            <Slider blockIncrement="100.0" max="2100.0" min="10.0" rotate="180.0" value="500.0"
              fx:id="animationSpeedSlider"/>
            <HBox.margin>
              <Insets left="40.0"/>
            </HBox.margin>
          </VBox>
          <Button onAction="#onStepButtonClick" text="Step" />
          <BorderPane.margin>
            <Insets bottom="10.0" left="40.0" top="30.0"/>
          </BorderPane.margin>
        </HBox>
      </top>
      <center>
        <ScrollPane BorderPane.alignment="CENTER">
          <StackPane alignment="TOP_LEFT" fx:id="animationPane"/>
        </ScrollPane>
      </center>
    </BorderPane>
  </Tab>
  <Tab text="Benchmark" />
</TabPane>
